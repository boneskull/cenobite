{
  "name": "cenobite",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "tshy",
    "dev": "tshy --watch",
    "test": "node --import tsx --test \"test/**/*.ts\"",
    "cenobite": "node --import tsx src/cli.ts"
  },
  "bin": {
    "cenobite": "./dist/esm/bin.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@endo/compartment-mapper": "1.6.3",
    "@endo/module-source": "1.3.3",
    "ses": "^1.14.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "9.36.0",
    "@stylistic/eslint-plugin": "5.4.0",
    "@types/node": "24.6.1",
    "@types/wallabyjs": "0.0.15",
    "@typescript-eslint/typescript-estree": "8.45.0",
    "@typescript-eslint/utils": "8.45.0",
    "bupkis": "0.10.2",
    "c8": "10.1.3",
    "cspell": "9.2.1",
    "escape-string-regexp": "5.0.0",
    "eslint": "9.36.0",
    "eslint-plugin-jsonc": "2.20.1",
    "eslint-plugin-perfectionist": "4.15.0",
    "expect-type": "1.2.2",
    "fast-check": "4.3.0",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "knip": "5.64.1",
    "lint-staged": "16.2.3",
    "markdownlint-cli2": "0.18.1",
    "markdownlint-cli2-formatter-pretty": "0.0.8",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2",
    "prettier-plugin-jsdoc": "1.3.3",
    "prettier-plugin-pkg": "0.21.2",
    "prettier-plugin-sort-json": "4.1.1",
    "tshy": "3.0.2",
    "tsx": "4.20.6",
    "type-fest": "4.41.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.45.0"
  },
  "lint-staged": {
    "*.{ts,cts,js,cjs,yml,json5}": [
      "eslint --fix",
      "prettier --write",
      "cspell"
    ],
    "**/!(package-lock).json": [
      "eslint --fix",
      "prettier --write",
      "cspell"
    ],
    "**/!(.github/prompts)/*.md": [
      "prettier --write",
      "cspell"
    ]
  },
  "prettier": {
    "jsdocCommentLineStrategy": "keep",
    "jsdocPreferCodeFences": true,
    "plugins": [
      "prettier-plugin-jsdoc",
      "prettier-plugin-pkg",
      "prettier-plugin-sort-json"
    ],
    "singleQuote": true,
    "tsdoc": true
  },
  "tshy": {
    "exports": {
      ".": "./src/cli.ts",
      "./package.json": "./package.json"
    },
    "dialects": [
      "esm"
    ]
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/cli.d.ts",
        "default": "./dist/esm/cli.js"
      }
    },
    "./package.json": "./package.json"
  },
  "module": "./dist/esm/cli.js"
}
