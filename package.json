{
  "name": "cenobite",
  "version": "0.1.0",
  "type": "module",
  "description": "A hardened test runner using Secure EcmaScript (SES)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boneskull/cenobite.git"
  },
  "author": {
    "name": "Christopher Hiller",
    "email": "boneskull@boneskull.com"
  },
  "license": "BlueOak-1.0.0",
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >=23"
  },
  "bin": {
    "cenobite": "dist/esm/bin.js"
  },
  "module": "./dist/esm/cli.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/cli.d.ts",
        "default": "./dist/esm/cli.js"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "src"
  ],
  "keywords": [
    "test",
    "test-runner",
    "ses",
    "hardened",
    "secure",
    "compartment",
    "endo"
  ],
  "scripts": {
    "build": "tshy",
    "cenobite": "node --import tsx src/cli.ts",
    "dev": "tshy --watch",
    "lint": "run-p lint:eslint lint:types lint:knip lint:markdown lint:spelling",
    "lint:commit": "commitlint",
    "lint:eslint": "eslint .",
    "lint:fix": "run-s \"lint:eslint -- --fix\"",
    "lint:knip": "knip",
    "lint:markdown": "markdownlint-cli2 \"**/*.md\"",
    "lint:spelling": "cspell .",
    "lint:staged": "lint-staged",
    "lint:types": "tsc -p .config/tsconfig.eslint.json",
    "lint:types:dev": "run-s \"lint:types -- --watch\"",
    "prepare": "husky; npm run build",
    "test": "npm run test:base \"test/**/*.ts\"",
    "test:base": "node --no-warnings --import tsx --test-reporter=spec --test"
  },
  "dependencies": {
    "@endo/compartment-mapper": "1.6.3",
    "ses": "1.14.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "9.36.0",
    "@stylistic/eslint-plugin": "5.4.0",
    "@types/node": "24.6.2",
    "@types/wallabyjs": "0.0.15",
    "@typescript-eslint/typescript-estree": "8.45.0",
    "@typescript-eslint/utils": "8.45.0",
    "bupkis": "0.10.6",
    "cspell": "9.2.1",
    "eslint": "9.36.0",
    "eslint-plugin-jsonc": "2.20.1",
    "eslint-plugin-perfectionist": "4.15.0",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "knip": "5.64.1",
    "lint-staged": "16.2.3",
    "markdownlint-cli2": "0.18.1",
    "markdownlint-cli2-formatter-pretty": "0.0.8",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2",
    "prettier-plugin-jsdoc": "1.3.3",
    "prettier-plugin-pkg": "0.21.2",
    "prettier-plugin-sort-json": "4.1.1",
    "tshy": "3.0.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.45.0"
  },
  "knip": {
    "ignoreDependencies": [
      "@types/wallabyjs",
      "markdownlint-cli2-formatter-pretty"
    ],
    "ignore": [
      ".wallaby.js",
      "**/*.d.ts"
    ],
    "tags": [
      "-knipignore"
    ],
    "node": {
      "entry": [
        "test/**/*.test.ts",
        "src/bin.ts",
        "src/cli.ts",
        "src/loader-hooks.ts",
        ".config/eslint-rules/*.js"
      ]
    }
  },
  "lint-staged": {
    "*.{ts,cts,js,cjs,yml,json5}": [
      "eslint --fix",
      "prettier --write",
      "cspell"
    ],
    "**/!(package-lock).json": [
      "eslint --fix",
      "prettier --write",
      "cspell"
    ],
    "**/!(.github/prompts)/*.md": [
      "prettier --write",
      "cspell"
    ]
  },
  "prettier": {
    "jsdocCommentLineStrategy": "keep",
    "jsdocPreferCodeFences": true,
    "plugins": [
      "prettier-plugin-jsdoc",
      "prettier-plugin-pkg",
      "prettier-plugin-sort-json"
    ],
    "singleQuote": true,
    "tsdoc": true
  },
  "tshy": {
    "exports": {
      ".": "./src/cli.ts",
      "./package.json": "./package.json"
    },
    "dialects": [
      "esm"
    ]
  }
}
